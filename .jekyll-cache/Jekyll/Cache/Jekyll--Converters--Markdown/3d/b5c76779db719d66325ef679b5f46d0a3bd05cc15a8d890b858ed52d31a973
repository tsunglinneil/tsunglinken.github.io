<span class="k">INSERT</span> <span class="k">INTO</span> <span class="n">dbo</span><span class="p">.</span><span class="n">book_category</span> <span class="p">(</span><span class="n">category_name</span><span class="p">,</span> <span class="n">sort</span><span class="p">,</span> <span class="n">suspend</span><span class="p">)</span> <span class="k">VALUES</span> <span class="p">(</span><span class="n">N</span><span class="s1">'醫療保健'</span><span class="p">,</span> <span class="mi">8</span><span class="p">,</span> <span class="s1">'N'</span><span class="p">);</span>
